---
import TopNav from "@components/TopNav.astro";
import BottomNav from "@components/BottomNav"
import "../base.css"
import Footer from "@components/Footer.astro";
import IdolConfetti from "@components/IdolConfetti";

import {LL} from "src/pages/idol"

await LL.setup()
const currentBirthdayIdol = await LL.getBirthdayIdol()
---

<html lang="en">
    <head>
        <title>Treelar</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body class="text-white bg-gray-900">
        <div class="min-h-screen overflow-x-hidden">
            <IdolConfetti colors={currentBirthdayIdol ? [currentBirthdayIdol.color] : undefined} client:only="react"></IdolConfetti>
            <!-- <TopNav/> -->
            <slot></slot>
            <BottomNav client:visible></BottomNav>
            <Footer/>
        </div>
    </body>
</html>
